    elif fahrTemp <=
    
    else: main()

def celsTherm(celsTemp):
    if celsTemp >= 90
    
    elif celsTemp == 
    
    elif celsTemp <=
    
    else: main()

def main():
    print("Thermostat")
    convChoice = input("Enter C for Celsius to Fahrenheit, F for Fahrenheit to Celsius, or E to exit: ")
    if convChoice == "C":
        fahrTherm(c2f(float(input("Enter temperature in Celsius: "))))
    elif convChoice == "F":
        celsTherm(f2c(float(input("Enter temperature in Fahrenheit: "))))
    elif convChoice == "E":
        exit()
    else: main()

main()
