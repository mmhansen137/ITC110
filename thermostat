# Note: this program will eventually crash because Guido doesn't appreciate recursion.

import sys
recurLimit=65535
sys.setrecursionlimit(recurLimit)

def f2c(fTemp):
    return ((fTemp - 32) * 5 / 9)
    

def c2f(cTemp):
    return ((cTemp * 9 / 5) + 32)

def fahrTherm(fahrTemp):
